@model IEnumerable<MVC_Razor_EF.Models.Alumnos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Datos De La Base De Datos</h2>

@*<div>
    <a href="~/Views/Alumnos/Create.cshtml" class="btn btn-primary">Crear Nuevo</a>
</div>
<br />*@

<p>@Html.ActionLink("Crear Nuevo", "Create", null, htmlAttributes: new {@class = "btn btn-success"})</p>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th>Primer Apellido</th>
                <th>Segundo Apellido</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Fecha Nacimiento</th>
                <th>Curp</th>
                <th>Sueldo</th>
                <th>Estado Origen</th>
                <th>Estatus</th>
                @*<th>Detalles</th>
                <th>Editar</th>
                <th>Eliminar</th>*@
            </tr>

            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(ModItem => oElemento.id)</td>
                    <td>@Html.DisplayFor(ModItem => oElemento.nombre)</td>
                    <td>@Html.DisplayFor(ModItem => oElemento.primerApellido)</td>
                    <td>@Html.DisplayFor(ModItem => oElemento.segundoApellido)</td>
                    <td>@Html.DisplayFor(ModItem => oElemento.correo)</td>
                    <td>@Html.DisplayFor(ModItem => oElemento.telefono)</td>
                    <td>@oElemento.fechaNacimiento.ToString("yyyy-MM.dd")</td>
                    <td>@Html.DisplayFor(ModItem => oElemento.curp)</td>
                    <td>@Html.DisplayFor(ModItem => oElemento.sueldo)</td>
                    <td>@Html.DisplayFor(ModItem => oElemento.idEstadoOrigen)</td>
                    <td>@Html.DisplayFor(ModItem => oElemento.idEstatus)</td>

                    <td>@Html.ActionLink("Detalles", "Details", new { id = oElemento.id }, htmlAttributes: new { @class = "btn btn-warning" })</td>
                    <td>@Html.ActionLink("Editar", "Edit", new { id = oElemento.id }, htmlAttributes: new { @class = "btn btn-primary" })</td>
                    <td>@Html.ActionLink("Eliminar", "Delete", new { id = oElemento.id }, htmlAttributes: new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </table>
    </div>
</div>



